<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>

	<files>
		<file> <!-- jobInfo.properties -->
			<source>${basedir}/src/main/templates/jobInfo_template.properties
			</source>
			<outputDirectory>.</outputDirectory>
			<destName>jobInfo.properties</destName>
			<filtered>true</filtered>
		</file>
	</files>

	<fileSets>
		<fileSet><!-- templates -->
			<directory>${templates.dir}</directory>
			<outputDirectory>${talend.job.name}/src/main/templates/
			</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet><!-- some resources -->
			<directory>${resources.dir}</directory>
			<outputDirectory>${talend.job.name}/src/main/resources/
			</outputDirectory>
			<includes>
				<include>xmlMappings/**</include>
				<include>sqltemplates/**</include>
				<include>rules/**</include>
				<include>log4j.xml</include>
			</includes>
		</fileSet>
		<fileSet><!-- assembly.xml -->
			<directory>${assemblies.dir}</directory>
			<outputDirectory>${talend.job.name}/src/main/assemblies/
			</outputDirectory>
			<includes>
				<include>assembly_${talend.job.name}.xml</include>
			</includes>
		</fileSet>
		<fileSet><!-- pom_*.xml -->
			<directory>${poms.dir}</directory>
			<outputDirectory>${talend.job.name}</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>pom_routines.xml</include>
				<include>pom_${talend.job.name}.xml</include>
			</includes>
		</fileSet>
		<fileSet> <!-- add items -->
			<directory>${items.dir}</directory>
			<outputDirectory>${talend.job.name}/src/main/items/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet> <!-- add java source codes -->
			<directory>${sourcecodes.dir}</directory>
			<outputDirectory>${talend.job.name}/src/main/java/</outputDirectory>
			<includes>
				<include>routines/**</include>
				<include>${talend.job.path}/**</include>
			</includes>
		</fileSet>
		<fileSet><!-- add context resources -->
			<directory>${resources.dir}</directory>
			<outputDirectory>${talend.job.name}/src/main/resources/
			</outputDirectory>
			<includes>
				<include>${talend.job.path}/**</include>
			</includes>
		</fileSet>
		<fileSet> <!-- add test source codes -->
			<directory>${test.sourcecodes.dir}</directory>
			<outputDirectory>${talend.job.name}/src/test/java/</outputDirectory>
			<includes>
				<include>${talend.job.path}/**</include>
			</includes>
		</fileSet>
		<fileSet> <!-- add test context resources -->
			<directory>${test.resources.dir}</directory>
			<outputDirectory>${talend.job.name}/src/test/resources/
			</outputDirectory>
			<includes>
				<include>${talend.job.path}/**</include>
			</includes>
		</fileSet>
		<fileSet> <!-- add test reports -->
			<directory>${reports.dir}</directory>
			<outputDirectory>${talend.job.name}/tests/</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet> <!-- add running scripts files -->
			<directory>${running.scripts.dir}</directory>
			<outputDirectory>${talend.job.name}/</outputDirectory>
			<includes>
				<include>${talend.job.name}_run.sh</include>
				<include>${talend.job.name}_run.bat</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		<fileSet><!-- add context resources for running -->
			<directory>${contexts.running.dir}</directory>
			<outputDirectory>${talend.job.name}</outputDirectory>
			<includes>
				<include>${talend.job.path}/**</include>
			</includes>
		</fileSet>
		<!-- If have children jobs, will add here -->
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>${talend.job.name}/lib</outputDirectory>
			<includes>
				<include>${talend.libraries.includes.set}</include>
			</includes>
			<!-- without version for talend libraries -->
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${talend.job.name}/lib</outputDirectory>
			<excludes>
				<exclude>${talend.libraries.excludes.set}</exclude>
				<exclude>${talend.jobs.excludes.set}</exclude>
			</excludes>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${jobs.binaries.includes.set}</include>
			</includes>
			<binaries>
				<outputDirectory>${talend.job.name}</outputDirectory>
				<includeDependencies>true</includeDependencies>
				<unpack>false</unpack>
				<includes>
					<!-- add the children jobs binaries -->
					<include>${jobs.binaries.includes.set}</include>
				</includes>
				<!-- use default file mapping settings -->
				<!-- <outputFileNameMapping>${module.artifactId}_${module.version}.${module.extension} 
					</outputFileNameMapping> -->
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- only for routines currently -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${routines.binaries.includes.set}</include>
			</includes>
			<binaries>
				<outputDirectory>${talend.job.name}/lib</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
				<outputFileNameMapping>${module.artifactId}.${module.extension}
				</outputFileNameMapping>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
